
<link rel="stylesheet" href="/styles/auth.css">

{{!-- form  --}}
<div class="admin-container" id="container">
	<div class="admin-form-container sign-in-container">
		<form id="login-form" action="/admin/login" method="post" >
			<div class="msg">
				<p class="m-0 text-red text-center">{{message}}</p>
			</div>
			<h1>Sign in</h1>
			<span style="margin-bottom: 20px;">or use your account</span>
			<input type="email" name="email" placeholder="Email" />
			<input type="password" name="password" placeholder="Password" />
			<a href="#">Forgot your password?</a>
			<button type="submit">Sign In</button>
		</form>
	</div>
</div>

<script>
  
	/* error message animation */
	const status = {{status}}
	if(status) $('.msg').addClass('active')

</script>